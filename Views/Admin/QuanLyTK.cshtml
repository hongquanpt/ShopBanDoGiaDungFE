                    const userAddress = $('#userAddress').val();
                    const userPhone = $('#userPhone').val();
                    const userEmail = $('#userEmail').val();
                    const userPassword = '1';  // Nếu API yêu cầu password, cần lấy từ form
                    console.log('Tên:', userName);
                    console.log('Ngày sinh:', userDob);
                    console.log('Địa chỉ:', userAddress);
                    console.log('Số điện thoại:', userPhone);
                    console.log('Email:', userEmail);

                    // Kiểm tra dữ liệu hợp lệ
                    if (!userName || !userDob || !userAddress || !userPhone || !userEmail) {
                        alert('Vui lòng điền đầy đủ thông tin.');
                        return;
                    }

                    // Tạo đối tượng tài khoản mới
                    const newUser = {
                        Ten: userName,
                        NgaySinh: userDob,  // Chuyển đổi thành Date nếu cần
                        DiaChi: userAddress,
                        Sdt: userPhone,
                        Email: userEmail,
                        Password: userPassword,  // Thêm mật khẩu nếu cần
                    };

                    try {
                        // Gọi API để thêm tài khoản mới
                        const response = await fetch('https://localhost:7248/api/AccessControllerAPI/register', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json',
                                'Authorization': 'Bearer ' + token // Thêm token nếu cần
                            },
                            body: JSON.stringify(newUser)
                        });

                        const result = await response.json();

                        if (response.ok) {
                            alert('Thêm tài khoản thành công!');
                            // Đóng modal và cập nhật lại bảng
                            $('#addUserModal').modal('hide');
                            location.reload(); // Hàm để tải lại bảng người dùng
                        } else {
                            alert('Có lỗi xảy ra: ' + result.message);
                        }
                    } catch (error) {
                        console.error('Lỗi khi thêm tài khoản:', error);
                        alert('Không thể thêm tài khoản. Vui lòng thử lại sau.');
                    }
                });


            } catch (generalError) {
                console.error('Lỗi chung:', generalError);
                alert('Đã xảy ra lỗi. Vui lòng thử lại sau.');
            }
        })();
    });
</script>
